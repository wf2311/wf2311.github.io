div.article-footer-copyright
  url
    if page.type != 3
        li="版权声明：本文由 "
          b= page.author ? page.author : theme.author
          span=" 发表于 "
          a(href=url_for(""))=config.title?config.title:theme.title
        li="转载声明：自由转载-非商用-非衍生-保持署名，非商业转载请注明作者及出处，商业转载请联系作者本人。"
    else
        li="版权声明：本文由 "
          b= page.author
          span=" 发表于 "
          a(href=url_for(page.source_url))= page.source_url
          li="本文版权归原作者所有，如有侵权请与我联系，我将立即删除。"
    li(id="blogTitleCp")="文章标题："
      a(style="word-wrap:break-word")=page.title
    li="文章链接："
      a(id='blogLink', style="word-wrap:break-word")
      script.
        var blogLink = decodeURI(window.location.href);
        var doc = document.getElementById('blogLink');
        doc.setAttribute("href", blogLink);
        doc.innerHTML=blogLink;